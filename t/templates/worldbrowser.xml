<div>
  <div dojoType="dijit.layout.BorderContainer" 
	   style="width: 100%; height: 100%"
	   design="sidebar" 
	   gutters="true" liveSplitters="true"
	   dojoAttachPoint="mainLayout"
	   class="worldBrowser">

	<div dojoType="dijit.layout.ContentPane" region="top" class="loginPane">
	  <input type="text" dojoType="dijit.form.TextBox"
			 dojoAttachPoint="usernameBox" />
	  <button dojoType="dijit.form.Button" 
			  dojoAttachEvent="onClick: loginBtnPressed" 
			  dojoAttachPoint="loginBtn">Log in</button> 
	  <button dojoType="dijit.form.Button"
			  dojoAttachEvent="onClick: logoutBtnPressed"
			  dojoAttachPoint="logoutBtn">Log out</button>
	  <div class="statusBar" dojoAttachPoint="statusBarNode"></div>
	</div>

	<!--<div dojoType="dijit.layout.ContentPane" dojoAttachPoint="viewport" region="center">
	</div>-->

	<div dojoType="dijit.layout.BorderContainer" splitter="true"
		 region="trailing" 
		 style="width: 250px;"> 
	  <table dojoType="dojox.grid.DataGrid" dojoAttachPoint="playerListView" region="center">
		<thead>
		  <tr>
			<th field="cb" width="10%">-</th>
			<th field="name" width="90%">Player Name</th>
		  </tr>
		</thead>
	  </table>
	  <div dojoType="dijit.Toolbar" region="bottom">
		<div dojoType="dijit.form.Button">Reload</div>
	  </div>
	</div>
  </div>
</div>
