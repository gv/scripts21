<div>
  <div dojoType="dijit.layout.BorderContainer" 
	   style="width: 100%; height: 100%"
	   design="sidebar" 
	   gutters="true" liveSplitters="true"
	   dojoAttachPoint="mainLayout">
	<div dojoType="dijit.layout.BorderContainer" region="center" splitter="true">
	  <div dojoType="dijit.layout.ContentPane" region="top">
		<input type="text" dojoType="dijit.form.TextBox"
			   dojoAttachPoint="usernameBox" />
		<button dojoType="dijit.form.Button" 
				dojoAttachEvent="onClick: loginBtnClicked" 
				dojoAttachPoint="loginBtn">Login</button> 
	  </div>
	</div> 
	<div dojoAttachPoint="viewport">
	</div>
	<div dojoType="dijit.layout.BorderContainer" splitter="true"
		 region="trailing" 
		 style="width: 250px;"> 
	  <table dojoType="dojox.grid.DataGrid" dojoAttachPoint="playerListView" region="center">
		<thead>
		  <tr>
			<th field="cb" width="10%">-</th>
			<th field="name" width="90%">Player Name</th>
		  </tr>
		</thead>
	  </table>
	  <div dojoType="dijit.Toolbar" region="bottom">
		<div dojoType="dijit.form.Button">Reload</div>
	  </div>
	</div>
  </div>
</div>
